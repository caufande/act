{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "cauact",
	"license": "GPL-2.0-or-later",
	"type": "commonjs",
	"author": "caufande",
	"scripts": {
		"prepare": "husky",
		"commit": "cz",
		"prefmt": "prettier -w .",
		"fmt": "eslint . --fix",
		"prelint": "prettier -c .",
		"lint": "eslint .",
		"build": "pnpm -F=./packages/* -F=./docs build",
		"clean": "pnpm -F=./packages/* -F=./docs clean",
		"test": "pnpm -F=./config -F=./docs -F=./packages/* test",
		"dev:weapp": "pnpm -F ./packages/weapp dev:weapp"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"commitizen": "^4.3.1",
		"cz-customizable": "^7.2.1",
		"eslint": "^9.12.0",
		"husky": "^9.1.6",
		"prettier": "^3.3.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	},
	"config": {
		"cz-customizable": {
			"config": "./config/cz-config.cjs"
		},
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	},
	"prettier": {
		"printWidth": 200,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"trailingComma": "all"
	},
	"repository": {
		"url": "git+https://github.com/caufande/act.git",
		"type": "git"
	},
	"packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b"
}
