{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "项目具体数据",
	"type": "object",
	"properties": {
		"floor": {
			"description": "项目编号",
			"type": "number",
			"minimum": 1
		},
		"title": {
			"description": "项目名称",
			"type": "string"
		},
		"detail": {
			"description": "项目介绍",
			"type": "string"
		},
		"stages": {
			"description": "活动具体内容",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"description": "内容名称",
						"type": "string"
					},
					"timeStep": {
						"description": "活动时间\n\n例如 2024 年 9 月 1 日到 2024 年 9 月 10 日，中间扣掉 9 月 3 日，即表示为 \n[[2024, 9, 1], [2024, 9, 2], [2024, 9, 4], [2024, 9, 10]]",
						"type": "array",
						"items": {
							"type": "array",
							"items": {
								"type": "number"
							}
						},
						"minItems": 1
					},
					"detail": {
						"description": "活动的描述",
						"type": "string"
					}
				},
				"required": ["name", "timeStep"]
			},
			"minItems": 1
		}
	},
	"required": ["floor", "stages", "title"]
}
