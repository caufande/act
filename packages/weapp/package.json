{
	"$schema": "https://json.schemastore.org/package",
	"name": "@cauact/app",
	"version": "0.1.0",
	"description": "CAU ACTivity 的跨平台小程序",
	"type": "module",
	"templateInfo": {
		"name": "default",
		"typescript": true,
		"css": "Less",
		"framework": "React"
	},
	"scripts": {
		"test": "tsc --noEmit",
		"test:build": "pnpm build:h5;pnpm build:weapp",
		"build:h5": "taro build --type h5",
		"build:weapp": "taro build --type weapp",
		"dev:h5": "npm run build:h5 -- --watch",
		"dev:weapp": "npm run build:weapp -- --watch"
	},
	"author": "caufande",
	"license": "GPL-2.0-or-later",
	"dependencies": {
		"@cauact/db": "workspace:^",
		"@cauact/db-operator-taro": "workspace:^",
		"@tarojs/components": "^4.0.6",
		"@tarojs/helper": "^4.0.6",
		"@tarojs/plugin-framework-react": "^4.0.6",
		"@tarojs/plugin-platform-h5": "^4.0.6",
		"@tarojs/plugin-platform-weapp": "^4.0.6",
		"@tarojs/react": "^4.0.6",
		"@tarojs/runtime": "^4.0.6",
		"@tarojs/shared": "^4.0.6",
		"@tarojs/taro": "^4.0.6",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-proposal-decorators": "^7.25.7",
		"@babel/preset-react": "^7.25.7",
		"@tarojs/cli": "^4.0.6",
		"@tarojs/vite-runner": "^4.0.6",
		"@types/react": "^18.3.11",
		"@types/webpack-bundle-analyzer": "^4.7.0",
		"@vitejs/plugin-react": "^4.3.2",
		"babel-preset-taro": "^4.0.6",
		"less": "^4.2.0",
		"rimraf": "^6.0.1",
		"vite": "^4.5.5",
		"webpack-bundle-analyzer": "^4.10.2"
	},
	"repository": {
		"directory": "packages/weapp",
		"type": "git",
		"url": "git+https://github.com/caufande/act.git"
	},
	"bugs": {
